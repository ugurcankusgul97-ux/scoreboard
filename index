    <div class="header-section">
        <div class="grand-prize">1.000 ‚Ç¨</div>
        <div class="company-title">Istadental Satƒ±≈ü Yarƒ±≈ümasƒ±</div>
        <div class="day-status" id="dayStatus">5.G√ºn G√ºncel Sonu√ßlar</div>
    </div>

    <div class="container">
        <div class="podium-wrap" id="podium"></div>

        <div class="list-grid" id="grid"></div>
    </div>

    <script>
        /***********************************************
         * AYARLAR: Buraya Google Sheets ID ve gid koy
         * - SPREADSHEET_ID: Google Sheets URL'deki uzun ID
         * - GID: sayfanƒ±n gid deƒüeri (genellikle 0 veya  gid numarasƒ±)
         *
         * √ñrnek sheet URL:
         * https://docs.google.com/spreadsheets/d/SPREADSHEET_ID/edit#gid=0
         ***********************************************/
        const SPREADSHEET_ID = 1hXyM4SdSDD5w7LqlziIO80xdHK_OkHklFuXrBbhYDuU; // <-- burayƒ± deƒüi≈ütir
        const GID = "0"; // genelde 0 olur, gerekirse deƒüi≈ütirebilirsin

        // gviz JSON endpoint (public veya "Anyone with link can view" olmalƒ±)
        const SHEET_URL = `https://docs.google.com/spreadsheets/d/${SPREADSHEET_ID}/gviz/tq?tqx=out:json&gid=${GID}`;

        const podiumEl = document.getElementById('podium');
        const gridEl = document.getElementById('grid');
        const dayStatusEl = document.getElementById('dayStatus');

        // Sayƒ± Arttƒ±rma (Counter)
        function animateCounter(element, startVal, target) {
            startVal = Number(startVal) || 0;
            if (target === 0) { element.innerText = 0; return; }
            let current = startVal;
            const duration = 800;
            const startTime = performance.now();
            function update(currentTime) {
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / duration, 1);
                const easeOut = 1 - Math.pow(1 - progress, 4);
                const value = Math.floor(startVal + easeOut * (target - startVal));
                element.innerText = value;
                if (progress < 1) requestAnimationFrame(update);
                else element.innerText = target;
            }
            requestAnimationFrame(update);
        }

        // JSON (gviz) -> agents array d√∂n√º≈ü√ºm√º
        function parseGviz(responseText) {
            // Google'ƒ±n d√∂nd√ºrd√ºƒü√º wrapper'ƒ± temizle
            const jsonText = responseText.replace(/^[^\(]*\(/, '').replace(/\);?$/, '');
            const data = JSON.parse(jsonText);
            const table = data.table;
            const cols = table.cols.map(c => (c && c.label) ? c.label.toLowerCase().trim() : "");
            const rows = table.rows.map(r => {
                const obj = {};
                r.c.forEach((cell, idx) => {
                    const key = cols[idx] || `col${idx}`;
                    obj[key] = cell ? cell.v : null;
                });
                return obj;
            });
            // normalize: beklediƒüimiz alanlar: name, score
            const agents = rows.map(r => {
                // bazƒ± kullanƒ±cƒ±lar s√ºtun adlarƒ±nƒ± "Name", "name", "ƒ∞sim" vs koyabilir
                const name = r.name ?? r.isim ?? r.ad ?? r.col0 ?? "";
                const score = Number(r.score ?? r.puan ?? r.col1 ?? 0) || 0;
                return { name: String(name).trim(), score: score };
            }).filter(a=>a.name); // isimsizleri √ßƒ±kar
            return agents;
        }

        // Board render (tam render: temizle + render)
        function renderBoard(agents) {
            // Sƒ±ralama (score desc, name asc)
            agents.sort((a, b) => {
                if (b.score === a.score) return a.name.localeCompare(b.name, 'tr');
                return b.score - a.score;
            });

            // Temizle
            podiumEl.innerHTML = "";
            gridEl.innerHTML = "";

            const top3 = agents.slice(0, 3);
            const rest = agents.slice(3);

            top3.forEach((agent, i) => {
                const rank = i + 1;
                const initial = agent.name.charAt(0).toUpperCase() || "?";

                const crown = rank === 1 ? '<div class="crown">üëë</div>' : '';
                const pursuit = rank === 2 ? '<div class="pursuit-indicator">üî•TAKƒ∞PTE!</div>' : '';

                const card = document.createElement('div');
                card.className = `podium-card rank-${rank}`;
                card.innerHTML = `
                    ${crown}
                    ${pursuit}
                    <div class="p-avatar">${initial}</div>
                    <div class="p-name">${agent.name}</div>
                    <div class="p-score" id="p-score-${i}">0</div>
                `;
                podiumEl.appendChild(card);
                // animate
                setTimeout(() => {
                    animateCounter(document.getElementById(`p-score-${i}`), 0, agent.score);
                }, 150 + (i * 150));
            });

            rest.forEach((agent, i) => {
                const realRank = i + 4;
                const isDanger = agent.score === 0;
                const dangerClass = isDanger ? 'danger-mode' : '';

                const card = document.createElement('div');
                card.className = `agent-card ${dangerClass}`;
                card.innerHTML = `
                    <div class="agent-info">
                        <h3>${agent.name}</h3>
                        <span>#${realRank}</span>
                    </div>
                    <div class="agent-score" id="g-score-${i}">0</div>
                `;
                gridEl.appendChild(card);

                setTimeout(() => {
                    animateCounter(document.getElementById(`g-score-${i}`), 0, agent.score);
                }, 400 + (i * 80));
            });

            // Konfeti (sadece ilk render i√ßin g√∂stermek istersen, burada bir flag ekleyebilirsin)
            setTimeout(() => {
                var end = Date.now() + (1.5 * 1000);
                var colors = ['#FFD700', '#ffffff', '#C0C0C0'];
                (function frame() {
                    confetti({ particleCount: 3, angle: 60, spread: 55, origin: { x: 0 }, colors: colors });
                    confetti({ particleCount: 3, angle: 120, spread: 55, origin: { x: 1 }, colors: colors });
                    if (Date.now() < end) requestAnimationFrame(frame);
                }());
            }, 600);
        }

        // Fetch Sheet ve render
        let firstLoad = true;
        async function fetchAndRender() {
            try {
                const res = await fetch(SHEET_URL);
                if (!res.ok) throw new Error('Sheet y√ºklenemedi: ' + res.status);
                const txt = await res.text();
                const agents = parseGviz(txt);

                // g√ºncel g√ºn numarasƒ± otomatik hesaplayƒ±p header'a yaz (opsiyonel)
                // burada √∂rnek g√ºn sayƒ±sƒ±nƒ± agent verisine baƒülƒ± deƒüil, elle y√∂neteceksin
                // dayStatusEl.innerText = "5.G√ºn G√ºncel Sonu√ßlar";

                renderBoard(agents);
                firstLoad = false;
            } catch (err) {
                console.error(err);
                // hata durumunda kullanƒ±cƒ±ya g√∂ster (isteƒüe baƒülƒ±)
                podiumEl.innerHTML = `<div style="color:#f55; padding:20px;">Veri y√ºklenemedi. Sheet ID ve payla≈üƒ±m ayarlarƒ±nƒ± kontrol et.</div>`;
                gridEl.innerHTML = "";
            }
        }

        // ƒ∞lk y√ºkleme
        fetchAndRender();

        // Otomatik yenileme (10 saniyede bir). ƒ∞stersen 15s-30s yap.
        setInterval(fetchAndRender, 10000);
    </script>
</body>
